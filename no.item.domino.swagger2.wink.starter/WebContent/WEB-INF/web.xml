<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>Personas REST Web Applikation</display-name>
	
	<servlet>
		<servlet-name>APIApplication</servlet-name>
		<servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.openntf.swagger.wink.application.Application</param-value>
		</init-param>
		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>restSdkAdmin</servlet-name>
		<servlet-class>org.apache.wink.server.internal.servlet.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>APIApplication</servlet-name>
		<url-pattern>api/v1/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>restSdkAdmin</servlet-name>
		<url-pattern>api/admin</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>CORSFilter</filter-name>
		<filter-class>no.item.filters.CORSFilter</filter-class>
	</filter>
	<filter>
	<filter-name>LogFilter</filter-name>
	<filter-class>no.item.filters.LogFilter</filter-class>
	<init-param>
		<param-name>test-param</param-name>
		<param-value>Initialization Parameter</param-value>
	</init-param>
	</filter>
	<filter-mapping>
		<filter-name>LogFilter</filter-name>
		<url-pattern>api/v1/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CORSFilter</filter-name>
		<url-pattern>api/v1/*</url-pattern>
	</filter-mapping>
</web-app>